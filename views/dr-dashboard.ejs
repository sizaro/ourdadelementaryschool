<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/styles.css">
    <title>Director Dashboard</title>
</head>
<body>
    <header id="director-header">
        <h1>Welcome, Director Michael</h1>
        <nav>
            <ul>
                <li><a href="#overview">Dashboard Overview</a></li>
                <li><a href="#manage-teachers">Manage Teachers</a></li>
                <li><a href="#manage-students">Manage Students</a></li>
                <li><a href="#manage-parents">Manage Parents</a></li>
                <li><a href="#manage-employees">Manage Employees</a></li>
                <li><a href="#events">School Events</a></li>
                <li><a href="#reports">View Reports</a></li>
                <li><a href="/logout" class="signout-btn">Sign Out</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <!-- Dashboard Overview -->
        <section id="overview">
            <h2>Dashboard Overview</h2>
            <div class="stats">
                <div class="stat">
                    <h3>Total Students</h3>
                    <p>450</p>
                </div>
                <div class="stat">
                    <h3>Total Teachers</h3>
                    <p>35</p>
                </div>
                <div class="stat">
                    <h3>Total Parents</h3>
                    <p>400</p>
                </div>
                <div class="stat">
                    <h3>Upcoming Events</h3>
                    <p>5</p>
                </div>
            </div>
        </section>

        <!-- Manage Teachers Section -->
        <section id="manage-teachers">
            <h2>Manage Teachers</h2>
            <button class="add-btn">Add Teacher</button>
            <ul class="teacher-list">
                <li>John Doe - Math Teacher</li>
                <li>Jane Smith - Science Teacher</li>
            </ul>
        </section>

        <!-- Manage Students Section -->
        <section id="manage-students">
            <h2>Manage Students</h2>
            <button class="add-btn">Add Student</button>
            <ul class="student-list">
                <li>Alice Johnson - Grade 5</li>
                <li>Bob Brown - Grade 6</li>
            </ul>
        </section>

        <!-- Manage Parents Section -->
        <section id="manage-parents">
            <h2>Manage Parents</h2>
            <button class="add-btn">Add Parent</button>
            <ul class="parent-list">
                <li>Michael Johnson - Parent of Alice Johnson</li>
                <li>Sarah Brown - Parent of Bob Brown</li>
            </ul>
        </section>

        <!-- Manage Employees Section -->
        <section id="manage-employees">
            <h2>Manage Employees</h2>
            <button class="add-btn">Add Employee</button>
            <ul class="employee-list">
                <li>Samuel Green - Admin</li>
                <li>Linda White - School Nurse</li>
            </ul>
        </section>

        <!-- School Events Section -->
        <section id="events">
            <h2>School Events</h2>
            <button class="add-btn">Add Event</button>
            <ul class="event-list">
                <li>School Picnic - Oct 30</li>
                <li>Parent-Teacher Conference - Nov 15</li>
            </ul>
        </section>

        <!-- Reports Section -->
        <section id="reports">
            <h2>View Reports</h2>
            <p>View detailed school performance and attendance reports.</p>
            <button class="view-reports-btn">View Reports</button>
        </section>
    </main>

    <footer>
        <p>&copy; 2024 Our Dad Elementary School</p>
    </footer>
</body>
</html>
