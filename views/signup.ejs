<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>

  <!-- Display success or error messages -->
  <% if (message) { %>
    <div id="message-container" style="color: green; font-weight: bold; margin-bottom: 15px;">
      <%= message %>
    </div>
  <% } %>

  <% if (errors) { %>
    <div id="errors-container" style="color: red; font-weight: bold; margin-bottom: 15px;">
      <ul>
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <!-- Director Signup Form -->
  <form id="directorSignupForm" action="/account/register" method="POST" enctype="multipart/form-data">
    <label for="first_name">First Name:</label>
    <input type="text" id="first_name" name="first_name" required 
           pattern="[a-z]+" title="First name should contain only lowercase alphabetic characters.">

    <label for="middle_name">Middle Name (optional):</label>
    <input type="text" id="middle_name" name="middle_name" 
           pattern="[a-z]*" title="Middle name should contain only lowercase alphabetic characters if provided.">

    <label for="last_name">Last Name:</label>
    <input type="text" id="last_name" name="last_name" required 
           pattern="[a-z]+" title="Last name should contain only lowercase alphabetic characters.">

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required 
           pattern="^[^\s@]+@[^\s@]+\.[^\s@]+$" title="Please enter a valid email address.">

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required
           pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{12,}$"
           title="Password must be at least 12 characters long and include at least one uppercase letter, one lowercase letter, one number, and one special character.">

    <label for="image_url">Upload Image:</label>
    <input type="file" id="image_url" name="image_url" accept="image/*">

    <input type="text" id="role" name="role" value="director">

    <button type="submit">Sign Up</button>
  </form>

  <script src="validation.js"></script>
</body>
</html>
